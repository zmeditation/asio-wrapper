
ifeq (${MAKECMDGOALS}, debug)
	cflag = -g -DDEBUG
	dir = debug
else
	cflag = -O -DNDEBUG
	lflag = -s
	dir = release
endif
cflags = -Wall -fexceptions ${cflag}

module = udp_client
target = ${dir}/${module}
sources = ${shell ls *.cpp}
objects = ${patsubst %.cpp,${dir}/%.o,${sources}}
deps = ${patsubst %.cpp,%.d,${sources}}
headers = ${shell ls *.h 2>/dev/null}
${shell mkdir -p ${dir}}

release debug : ${target}
-include ${deps}
${target} : ${objects}
	g++ -o ${target} ${objects} ${lflag} -pthread -lboost_system -lboost_thread
${objects} : ${dir}/%.o : %.cpp
	g++ ${cflags} -E -MMD -MT '${subst .cpp,.o,${dir}/$<}' $< 1>/dev/null
	g++ ${cflags} -c $< -o $@

.PHONY : clean
clean:
	-rm -rf ${deps} debug release

